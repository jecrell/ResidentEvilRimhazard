<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>RE_Apparel_RPD_Armor</defName>
		<description>Specialized body armor to protect members of the police department.</description>
		<label>RPD body armor</label>
		<graphicData>
			<texPath>Apparel/Display/RERPDArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<costList>
      <ComponentIndustrial>8</ComponentIndustrial>
      <Steel>135</Steel>
	</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
		  <WorkToMake>180000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>11</Mass>
			<MarketValue>2900</MarketValue>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.9</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>6</Insulation_Heat>
      <EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
		</equippedStatOffsets>
		<generateCommonality>0.1</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Bodywear_Clothing/RPDArmor/RERPDArmor</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>RE_LightRPD</li>
			</tags>
		</apparel>
		<recipeMaker Inherit="False">
			<recipeUsers/>
		</recipeMaker>
	</ThingDef>

