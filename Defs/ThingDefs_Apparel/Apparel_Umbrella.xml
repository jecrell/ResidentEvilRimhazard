<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>RE_Apparel_Gasmask</defName>
    <label>U.S.S. gasmask</label>
    <description>This filtered mask provides excellent protection against the elements. It is also part of the Umbrella Security Service (U.S.S.) standard uniform.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Apparel/Bodywear_Clothing/UmbrellaSecurity/USSGasmask_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costList>
      <Steel>40</Steel>
      <Cloth>10</Cloth>
    </costList>
		<statBases>
			<WorkToMake>3200</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
		<apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bodywear_Clothing/UmbrellaSecurity/USSGasmask</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>RE_UmbrellaSec</li>
      </tags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>RE_Apparel_BulletVest</defName>
    <label>U.S.S. bulletproof vest</label>
    <description>A more heavy-duty variation of the flak vest specially designed for the use of Umbrella Security Service (USS).</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Bodywear_Clothing/UmbrellaSecurity/USSVest_Male_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9200</WorkToMake>
      <MaxHitPoints>205</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.02</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
      <ArmorRating_Heat>0.29</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <Steel>60</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bodywear_Clothing/UmbrellaSecurity/USSVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>RE_UmbrellaSec</li>
      </tags>
    </apparel>
  </ThingDef>

  
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RE_Apparel_USSUniform</defName>
