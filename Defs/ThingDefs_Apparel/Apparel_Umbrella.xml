      <texPath>Apparel/Bodywear_Clothing/UmbrellaSecurity/USSUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costList>
      <Cloth>40</Cloth>
      <Steel>2</Steel>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.21</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.24</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.6</EquipDelay>
